{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://oip-protocol.org/schema/oip-identity.schema.json",
  "title": "OIP Operational Identity (OID) Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["oid", "public_key", "manufacturer_id", "firmware_hash", "created_at", "status"],
  "properties": {
    "oid": { "type": "string", "minLength": 8, "maxLength": 128 },
    "public_key": { "type": "string", "minLength": 16, "maxLength": 256 },
    "manufacturer_id": { "type": "string", "minLength": 1, "maxLength": 128 },
    "firmware_hash": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
    "model_hash": { "type": ["string", "null"], "pattern": "^[a-fA-F0-9]{64}$" },
    "created_at": { "type": "string", "format": "date-time" },
    "status": { "type": "string", "enum": ["ACTIVE", "REVOKED", "SUSPENDED"] }
  }
}
